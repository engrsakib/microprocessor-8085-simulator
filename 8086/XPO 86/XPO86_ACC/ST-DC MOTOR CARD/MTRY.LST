 0111  EE	 	 	            OUT DX,AL
 0112  CD AA	 	 	 	 	INT 0AAH    ;delay routine
 0114  B0 0C	 	 	 	 	MOV AL,0CH  ;2nd phase code
 0116  EE	 	 	            OUT DX,AL   
 0117  CD AA	 	 	 	 	INT 0AAH
 0119  B0 09	 	 	 	 	MOV AL,09H  ;3rd phase code
 011B  EE	 	 	            OUT DX,AL
 011C  CD AA	 	 	 	 	INT 0AAH
 011E  B0 03	 	 	 	 	MOV AL,03H  ;4th phase code
 0120  EE	 	 	            OUT DX,AL
 0121  CD AA	 	 	 	 	INT 0AAH
